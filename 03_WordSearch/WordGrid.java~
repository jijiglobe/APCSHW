public class WordGrid{
    private char[][] grid;
    
    public void clear(){
	for(int i=0;i<grid.length;i++){
	    for(int t;t<grid[i].length;t++){
		grid[i][t] = ' ';
	    }
	}
    }

    public void toString(){

	for(int i=0;i<grid.length;i++){
	    String thisline;	    
	    for(int t;t<grid[i].length;t++){
		thisline+=grid[i][t]
	    }
	    System.out.println(thisline);
	}
    }	

